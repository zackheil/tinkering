{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ESNext",
    "outDir": "./dist",
    "sourceMap": true,
    "strict": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "useUnknownInCatchVariables": false,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noEmit": true
  }
}
